@model IEnumerable<Conembador.Models.Arquivo>

<!DOCTYPE html>
<html>
<head>
    <title>Lista de Arquivos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            margin: 20px auto;
            width: 90%;
        }

        .button {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 14px;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 5px;
            transition-duration: 0.4s;
        }

            .button:hover {
                background-color: #0069d9;
                color: white;
            }

            .button:active {
                background-color: #0056b3;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="my-4">Lista de Arquivos</h2>
        @if (Model != null && Model.Any())
        {
            <div class="table-container">
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Versão</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var arquivo in Model)
                        {
                            <tr>
                                <td>@arquivo.id_arquivo</td>
                                <td>@arquivo.NomeEdi</td>
                                <td>@arquivo.Versao</td>
                                <td>
                                    <form method="get" asp-controller="Item" asp-action="Detalhes" asp-route-id="@arquivo.id_arquivo" style="display:inline;">
                                        <button type="submit" class="button btn btn-primary">Ver Detalhes</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                Nenhum arquivo encontrado.
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
