@model IEnumerable<Conembador.Models.Arquivo>

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Arquivos</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        .table-container {
            margin: 20px auto;
            width: 90%;
        }

        .custom-button {
            margin: 4px 2px;
            transition-duration: 0.4s;
        }

            .custom-button:hover {
                background-color: #0056b3;
                color: white;
            }

            .custom-button:active {
                background-color: #004080;
                box-shadow: 0 5px #666;
                transform: translateY(4px);
            }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="my-4 text-center">Lista de Arquivos</h2>
        @if (Model != null && Model.Any())
        {
            <div class="table-container">
                <table class="table table-striped table-bordered">
                    <thead class="thead-light">
                        <tr>
                            <th>ID</th>
                            <th>Nome</th>
                            <th>Versão</th>
                            <th colspan="2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var arquivo in Model)
                        {
                            <tr>
                                <td>@arquivo.id_arquivo</td>
                                <td>@arquivo.NomeEdi</td>
                                <td>@arquivo.Versao</td>
                                <td>
                                    <form method="get" asp-controller="Item" asp-action="Detalhes" asp-route-id="@arquivo.id_arquivo" style="display:inline;">
                                        <button type="submit" class="btn btn-primary custom-button">Ver Detalhes</button>
                                    </form>
                                </td>
                                <td>
                                    <form method="get" asp-controller="Item" asp-action="CadastrarItem" asp-route-id="@arquivo.id_arquivo" style="display:inline;">
                                        <button type="submit" class="btn btn-success custom-button">Cadastrar Itens</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                Nenhum arquivo encontrado.
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
